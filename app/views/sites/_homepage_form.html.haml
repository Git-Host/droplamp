=content_for :head do
  :coffeescript
    $().ready ->
      timer = 0
      delay = (ms, callback) ->
        clearTimeout timer
        timer = setTimeout(callback, ms)
      $("#site_domain_attributes_tld").change ->
        $(this).popover('show')
      $("#site_domain_attributes_domain, #site_domain_attributes_tld").blur ->
        $("#site_domain_attributes_tld").popover('hide')
      $("#site_domain_attributes_domain").focus ->
        $("#site_domain_attributes_tld").popover('show') 
      $("#site_domain_attributes_tld").popover
          placement: "bottom"
          trigger: "manual"
          width: 400
          title: ->
            if $(this).val() == "kissr.co"
              "Free"
            else
              "Paid"
          content: ->
            console.log($(this).val())
            if $(this).val() == "kissr.co"
              "50mb Storage <br> 50mb Bandwidth"
            else
              "Unlimited Storage <br>Unlimited Bandwidth<br>Priority Support"

      $("#domain_preregistered,label[for=site_already_registered]").hide()
      $("#site_domain_attributes_domain").keyup -> domainChange() 
      $("#site_domain_attributes_tld").change -> domainChange() 
      $("[type=submit]").click (e)->
        if $("#site_domain_attributes_domain").val() == ""
          $("#blankDomain").modal("show")
          e.preventDefault()
        else
          if $(".control-group").hasClass("error")

            if $("#site_domain_attributes_tld").val() == "kissr.co"
              $("#alreadyRegisteredKISSr").modal("show")
            else
              $("#alreadyRegistered").modal("show")

            e.preventDefault()

      domainChange = -> 
        delay(500, ->
          domain = $("#site_domain_attributes_domain").val()
          tld = $("#site_domain_attributes_tld").val()
          $.get "/domains/status?domain=\#{domain}&tld=\#{tld}", (response) ->
            if response == "taken"
              $("#site_domain_attributes_domain").parent().parent().find('.help-block').text("Taken")
              $(".control-group").addClass("error")
              $(".control-group").removeClass("success")
            else
              $("#site_domain_attributes_domain").parent().parent().find('.help-block').text("Available")
              $(".control-group").removeClass("error")
              $(".control-group").addClass("success")

        )
        $(".ownership_verified").click ->
          $(".control-group").removeClass("error")
          $("form").submit()
.row
  =form_for @site, html: { class: "form-horizontal" } do |f|
    .span7
      -if @site.errors.any?
        -@site.errors.full_messages.each do |msg|
          %p.alert.alert-box= msg
      %fieldset
        = f.fields_for :domain do |d|
          .control-group
            =d.label :domain, :class=>"control-label"
            .controls
              .input-append
                =d.text_field :domain, placeholder: "mysite", autocomplete: "off"
                -if session[:reffered_by_id] 
                  = d.select :tld, [".kissr.co - Free!",".com - $79.99 today (Down from $99.99)",".org - $79.99 today (Down from $99.99)",".net - $79.99 today (Down from $99.99)",".info - $79.99 today (Down from $99.99)"].zip(Domain::TLDS), html: {:class => "add-on"}
                -else  
                  = d.select :tld, [".kissr.co - Free!",".com - $99.99 per year",".org - $99.99 per year",".net - $99.99 per year",".info - $99.99 per year"].zip(Domain::TLDS), html: {:class => "add-on"}

              %p.help-block The domain you want to point to your Dropbox
    .span4
      = f.submit "Try it!", :class => "btn btn-primary btn-huge"


