=content_for :head do
  :coffeescript
    $().ready ->
      $("#domain_preregistered,label[for=site_already_registered]").hide()
      $("#domain_tld").change ->
        if $(this).val() != "droplamp.com"
          $("#domain_preregistered,label[for=site_already_registered]").slideDown()
        else
          $("#domain_preregistered,label[for=site_already_registered]").slideUp()
        false
.well
  Droplamp enables you to host websites out of your Dropbox
=form_for @site, html: { class: "form-horizontal" } do |f|
  %fieldset
    = f.fields_for :domain do |d|
      .control-group
        =d.label :domain, :class=>"control-label"
        .controls
          =d.text_field :domain, placeholder: "mysite"
          =d.select :tld, [".droplamp.com ($0.00 Setup + $0.00/mo)",".com ($9.99 Setup + 4.99/mo)",".org ($9.99 Setup  + 4.99/mo)",".net ($9.99 Setup  + 4.99/mo)",".info ($9.99 Setup  + 4.99/mo)"].zip(Domain::TLDS), html: {:class => "span6"}

    .control-group
      = f.label :dropbox_folder, "Dropbox Folder", :class=>"control-label"
      .controls
        .input-prepend
          %span.add-on Dropbox/Apps/DropLamp/
          = f.text_field :dropbox_folder, :placeholder => "My Website"
        %p.help-block Name of the folder DropLamp will create in your Dropbox
  = f.submit :class => "btn primary"

